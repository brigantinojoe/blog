<section class="p-3 bg-secondary" style="height: 100vh;">
  <div class="d-flex justify-content-center">
    <div class="card text-center w-50 mt-5">
      <div class="card-header fs-2">
        Log In
      </div>
      <div class="card-body">
        <form class="form login-form">
          <div class="form-group">
            <label for="login-username">Username</label>
            <input type="text" class="form-control" id="login-username" aria-describedby="emailHelp"
              placeholder="joedemo123">
          </div>
          <div class="form-group mt-3">
            <label for="login-password" class="mt-3">Password</label>
            <input type="password" class="form-control" id="login-password" placeholder="Password">
          </div>
          <button type="submit" class="mt-3 btn btn-primary">Submit</button>
        </form>
      </div>
      <p>Don't have an account? Sign up <a href="/signup">here</a></p>
    </div>

  </div>
</section>

<script src="./js/login.js"></script>