<section class="p-3 bg-secondary" style="height: 100vh;">
  <div class="d-flex justify-content-center">
    <div class="card text-center w-50 mt-5">
      <div class="card-header fs-2">
        Sign Up
      </div>
      <div class="card-body">
        <form class="form signup-form">
          <div class="form-group">
            <label for="signup-username">Username</label>
            <input type="text" class="form-control" id="signup-username" aria-describedby="emailHelp"
              placeholder="joedemo123">
          </div>
          <div class="form-group mt-3">
            <label for="signup-email">Email address</label>
            <input type="email" class="form-control" id="signup-email" aria-describedby="emailHelp"
              placeholder="joe@placeholder.com">
          </div>
          <div class="form-group mt-3">
            <label for="signup-password" class="mt-3">Password</label>
            <input type="password" class="form-control" id="signup-password" placeholder="Password">
          </div>
          <button type="submit" class="mt-3 btn btn-primary">Submit</button>
        </form>
      </div>
      <p>Already have an account? Log in <a href="/login">here</a></p>
    </div>

  </div>
</section>

<script src="./js/signup.js"></script>